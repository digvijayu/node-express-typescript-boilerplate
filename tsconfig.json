{
  "compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES6",
		"declaration": true,
		"lib": ["es2019"],
		"removeComments": true,
		"outDir": "./dist/",
		"sourceRoot": "./src/",
		"sourceMap": true,
		"strict": true,
		/* Additional Checks */
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]

}